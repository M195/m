{
  "name": "m-bot",
  "version": "1.0.2",
  "description": "A little console based chatbot",
  "main": "src/index.js",
  "bin": {
    "m": "bin/m"
  },
  "scripts": {
    "start": "node .",
    "dev": "nodemon .",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "postinstall": "yarn build"
  },
  "author": "Caleb Sharp",
  "license": "MIT",
  "dependencies": {
    "@types/handlebars": "^4.0.36",
    "@types/natural": "^0.2.33",
    "handlebars": "^4.0.10",
    "natural": "^0.5.4"
  },
  "devDependencies": {
    "@types/jest": "^21.1.5",
    "jest": "^21.2.1",
    "typescript": "^2.6.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/preprocessor.js"
    },
    "testMatch": [
      "**/__tests__/*.(ts|tsx|js)"
    ]
  }
}
